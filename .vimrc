syntax on
set cursorline
set nobackup
set autoread            " watch file changes
set number              " line numbers
set numberwidth=5
set showcmd             " show selection metadata
"set showmode
set showmatch           " show matching brackets
set autoindent smartindent
set smarttab
set scrolloff=5
set laststatus=2        " display status line
set hlsearch
set showmatch

" indentation and tabs
set autoindent
set smartindent
set expandtab
set tabstop=2
set shiftwidth=2

filetype on
filetype indent on
filetype plugin on

" no sound
set noerrorbells
set visualbell
